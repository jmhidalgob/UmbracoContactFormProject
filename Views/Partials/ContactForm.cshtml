@using UmbracoContactFormProject.Controllers
@model UmbracoContactFormProject.Models.ContactFormViewModel

<div class="contact-form-container">

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">
            Â¡Gracias! Tu mensaje ha sido enviado correctamente.
        </div>
    }

    @using (Html.BeginUmbracoForm<ContactFormController>(nameof(ContactFormController.Submit)))
    {
        <div class="fields">
            <div class="field half">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="field half">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="field">
                <label asp-for="Message"></label>
                <textarea asp-for="Message" class="form-control"></textarea>
                <span asp-validation-for="Message" class="text-danger"></span>
            </div>
        </div>
        <ul class="actions special">
            <li><input type="submit" name="submit" id="submit" value="Send Message" /></li>
        </ul>
    }

</div>